<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00c3ff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="EDOOFUN"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textColor="#fff"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewtotal"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_below="@id/toolbar"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="24dp"
        app:cardCornerRadius="8sp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_koin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/koin"
                android:padding="10sp"
                android:layout_marginTop="5sp"
                android:foregroundGravity="center"/>


            <TextView
                android:id="@+id/total"
                android:text="000-"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="28sp"
                android:layout_marginTop="11sp"
                android:layout_marginEnd="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/history"
        android:layout_width="190dp"
        android:layout_height="65dp"
        android:layout_below="@id/toolbar"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="24dp"
        android:layout_toEndOf="@+id/cardviewtotal"
        android:layout_toRightOf="@+id/cardviewtotal"
        app:cardCornerRadius="8sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="2sp"
            android:orientation="horizontal"
            android:layout_marginRight="2sp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7sp"
                android:layout_marginLeft="5sp"
                android:padding="8sp"
                android:src="@drawable/history" />

            <TextView
                android:id="@id/history"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignLeft="@+id/history"
                android:layout_marginStart="2sp"
                android:layout_marginLeft="6sp"
                android:gravity="center"
                android:text="Riwayat Pembelian"
                android:textSize="17sp"
                android:textStyle="bold" />


        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/koinedoofun"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_below="@+id/cardviewtotal"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:layout_marginLeft="0sp"
        android:layout_marginTop="20sp"
        app:cardCornerRadius="8sp"
        app:cardBackgroundColor="@android:color/holo_orange_dark"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="15sp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/koin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15sp"
                android:layout_marginLeft="0sp"
                android:gravity="left"
                android:text="Koin Edoofun"
                android:textColor="#FFF"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/beli1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/koin"
                android:layout_marginStart="70sp"
                android:layout_marginLeft="50sp"
                android:layout_marginEnd="15sp"
                android:layout_marginRight="15sp"
                android:background="@drawable/custom_button"
                android:gravity="center"
                android:text="Beli"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/materikursus"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_below="@+id/koinedoofun"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:layout_marginLeft="0sp"
        android:layout_marginTop="20sp"
        app:cardCornerRadius="8sp"
        app:cardBackgroundColor="#FFFFCC00">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="15sp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/materi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15sp"
                android:layout_marginLeft="0sp"
                android:gravity="center"
                android:text="Materi Kursus"
                android:textColor="#FFF"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/beli2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/materi"
                android:layout_marginStart="60sp"
                android:layout_marginLeft="50sp"
                android:layout_marginEnd="15sp"
                android:layout_marginRight="15sp"
                android:background="@drawable/custom_button"
                android:gravity="center"
                android:text="Beli"
                android:textColor="#FFFFCC00"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/btn_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/main_menu" />

</RelativeLayout>
