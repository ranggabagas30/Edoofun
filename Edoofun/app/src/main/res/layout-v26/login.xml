<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <Button
        android:id="@+id/btn_login1"
        android:layout_width="309dp"
        android:layout_height="55dp"
        android:layout_marginBottom="40dp"
        android:background="#F0A338"
        android:text="@string/login"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/username_txt"
        app:layout_constraintEnd_toEndOf="@+id/username_txt"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="@+id/username_txt"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/username_txt"
        android:layout_width="348dp"
        android:layout_height="285dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="251dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="171dp"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        android:text="@string/login"
        app:layout_constraintBottom_toTopOf="@+id/username_txt"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="32dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="174dp"
        android:layout_height="70dp"
        android:background="#FDBEB6B6"
        android:text="@string/buat_akun"
        app:layout_constraintBottom_toTopOf="@+id/username_txt"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="203dp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="151dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/ForgetPass_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lupa_kata_sandi"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="504dp" />

    <Button
        android:id="@+id/btn_fb"
        android:layout_width="297dp"
        android:layout_height="61dp"
        android:background="#3F51B5"
        android:text="@string/login_with_facebook"
        android:textColor="#FFFFFF"
        android:textIsSelectable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="567dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:adjustViewBounds="false"
        app:layout_constraintBottom_toBottomOf="@+id/btn_mail"
        app:layout_constraintTop_toTopOf="@+id/btn_mail"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/gmail"
        tools:layout_editor_absoluteX="74dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_mail"
        android:layout_width="297dp"
        android:layout_height="61dp"
        android:background="#FFFFFF"
        android:text="@string/login_with_g_mail"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="637dp" />

    <EditText
        android:id="@+id/password_txt"
        android:layout_width="272dp"
        android:layout_height="49dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/kata_sandi"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/username_txt"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="@+id/username_txt"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="368dp" />

    <EditText
        android:id="@+id/user_txt"
        android:layout_width="273dp"
        android:layout_height="48dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/nama_pengguna"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/username_txt"
        app:layout_constraintHorizontal_bias="0.74"
        app:layout_constraintStart_toStartOf="@+id/username_txt"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="303dp" />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="29dp"
        android:layout_height="42dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toStartOf="@+id/user_txt"
        app:layout_constraintStart_toStartOf="@+id/username_txt"
        app:srcCompat="@drawable/user"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="309dp" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="33dp"
        android:layout_height="34dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toStartOf="@+id/password_txt"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toStartOf="@+id/username_txt"
        app:srcCompat="@drawable/kunci"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="376dp" />


</androidx.constraintlayout.widget.ConstraintLayout>